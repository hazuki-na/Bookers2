<%= render 'shared/header' %>

<h2 class="top">User info</h2>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :Name %><br/>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "Image", class: "user-edit-form" %>
  </div>

  <div class="field">
    <%= f.label :Introduction %><br/>
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
  
<% end %>

<%= render 'shared/footer' %>